<style>
  .swiper_custom {
    {{ section.settings.swiper_liquid }};
  }
  .swiper-wrapper_custom {
    {{ section.settings.swiper-wrapper_liquid }};
  }
  .swiper-slide_custom {
    {{ section.settings.swiper-slide_liquid }};
  }
  .swiper-pagination_custom {
    {{ section.settings.swiper-pagination_liquid }};
  }
  .swiper-button-prev_custom {
    background-color: transparent;
    {{ section.settings.swiper-button-prev_liquid }};
  }
  .swiper-button-next_custom {
    background-color: transparent;
    {{ section.settings.swiper-button-next_liquid }};
  }
  .swiper-scrollbar_custom {
    {{ section.settings.swiper-scrollbar_liquid }};
  }
  .swiper-section-spacing {
    padding-top: 20px;
    padding-bottom: 20px;
    margin-left: 20px;
    margin-right: 20px;
  }
</style>

<script>
  (function () {
    const option = {
      allowSlideNext: {{ section.settings.allowSlideNext }},                   // スライド次へ
      allowSlidePrev: {{ section.settings.allowSlidePrev }},                   // スライド前へ
      autoHeight: {{ section.settings.autoHeight }},                           // 自動高さ
      centeredSlides: {{ section.settings.centeredSlides }},                   // 中央のスライド
      createElements: {{ section.settings.createElements }},                   // 要素を作成する
      direction: {{ section.settings.direction }},                             // 方向
      loop: {{ section.settings.loop }},                                       // ループ
      loopAdditionalSlides: {{ section.settings.loopAdditionalSlides }},       // ループ追加スライド
      loopFillGroupWithBlank: {{ section.settings.loopFillGroupWithBlank }},   // ループフィルグループブランク
      {% if section.settings.loopedSlides_enabled == 'true' %}
      loopedSlides: {{ section.settings.loopedSlides }},                       // ループスライド
      {% endif %}
      loopedSlidesLimit: {{ section.settings.loopedSlidesLimit }},             // ループスライド制限
      maxBackfaceHiddenSlides: {{ section.settings.maxBackfaceHiddenSlides }}, // 最大背面隠しスライド
      rewind: {{ section.settings.rewind }},                                   // 巻き戻す
      slidesOffsetAfter: {{ section.settings.slidesOffsetAfter }},             // スライドオフセット後
      slidesOffsetBefore: {{ section.settings.slidesOffsetBefore }},           // スライドオフセット前
      slidesPerGroup: {{ section.settings.slidesPerGroup }},                   // グループごとのスライド数
      slidesPerGroupAuto: {{ section.settings.slidesPerGroupAuto }},           // スライドPerGroup自動
      slidesPerGroupSkip: {{ section.settings.slidesPerGroupSkip }},           // スライドPerGroupSkip
      {% if section.settings.slidesPerView_enabled == 'true' %}
      slidesPerView: 'auto',                                                   // スライド数/ビュー('auto')
      {% else %}
      slidesPerView: {{ section.settings.slidesPerView }},                     // スライド数/ビュー(number)
      {% endif %}
      spaceBetween: {{ section.settings.spaceBetween }},                       // スペース間
      speed: {{ section.settings.speed }},                                     // スピード
      // 効果(エフェクト)
      effect: {{ section.settings.effect }},                                   // トランジション効果の設定(slide:スライド fade:フェード cube:キューブ coverflow:カバーフロー flip:フリップ creative:クリエイティブ cards:カード)
      {% if section.settings.effect == "'fade'" %}
      // フェード
      fadeEffect: {
        crossFade: {{ section.settings.fadeEffect_crossFade }}
      },
      {% endif %}
      {% if section.settings.effect == "'cube'" %}
      // キューブ
      cubeEffect: {
        shadow: {{ section.settings.cubeEffect_shadow }},
        shadowOffset: {{ section.settings.cubeEffect_shadowOffset }},
        shadowScale: {{ section.settings.cubeEffect_shadowScale }} / 100,
        slideShadows: {{ section.settings.cubeEffect_slideShadows }}
      },
      {% endif %}
      {% if section.settings.effect == "'coverflow'" %}
      // カバーフロー
      coverflowEffect: {
        depth: {{ section.settings.coverflowEffect_depth }},
        modifier: {{ section.settings.coverflowEffect_modifier }},
        rotate: {{ section.settings.coverflowEffect_rotate }},
        scale: {{ section.settings.coverflowEffect_scale }},
        slideShadows: {{ section.settings.coverflowEffect_slideShadows }},
        stretch: {{ section.settings.coverflowEffect_stretch }}
      },
      {% endif %}
      {% if section.settings.effect == "'flip'" %}
      // フリップ
      flipEffect: {
        limitRotation: {{ section.settings.flipEffect_limitRotation }},
        slideShadows: {{ section.settings.flipEffect_slideShadows }}
      },
      {% endif %}
      {% if section.settings.effect == "'creative'" %}
      // クリエイティブ
      creativeEffect: {
        limitProgress: {{ section.settings.creativeEffect_limitProgress }},
        prev: {{ section.settings.creativeEffect_prev }},
        next: {{ section.settings.creativeEffect_next }},
        perspective: {{ section.settings.creativeEffect_perspective }},
        progressMultiplier: {{ section.settings.creativeEffect_progressMultiplier }},
        shadowPerProgress: {{ section.settings.creativeEffect_shadowPerProgress }}
      },
      {% endif %}
      {% if section.settings.effect == "'cards'" %}
      // カード
      cardsEffect: {
        perSlideOffset: {{ section.settings.cardsEffect_perSlideOffset }},
        perSlideRotate: {{ section.settings.cardsEffect_perSlideRotate }},
        rotate: {{ section.settings.cardsEffect_rotate }},
        slideShadows: {{ section.settings.cardsEffect_slideShadows }}
      },
      {% endif %}
      {% if section.settings.navigation_enabled == 'true' %}
      // ナビゲーション
      navigation: {
        nextEl: '.swiper-button-next',                                    // ナビゲーション「次へ」のElementのCSSセレクター文字列
        prevEl: '.swiper-button-prev'                                     // ナビゲーション「前へ」のElementのCSSセレクター文字列
      },
      {% endif %}
      {% if section.settings.pagination_enabled == 'true' %}
      // ページネーション
      pagination: {
        el: '.swiper-pagination',                                         // ページネーションのElementのCSSセレクター文字列
        type: {{ section.settings.pagination_type }},                     // ページネーションのページ区切りタイプ(bullets:箇条書き fraction:分数 progressbar:プログレスバー custom:カスタム)
        clickable: true                                                   // ページネーションボタンをクリックするとtrue、適切なスライドに切り替わります。bulletsのページネーションタイプのみ
      },
      {% endif %}
      {% if section.settings.scrollbar_enabled == 'true' %}
      // スクロールバー
      scrollbar: {
        el: '.swiper-scrollbar',                                          // スクロールバーのElementのCSSセレクター文字列
        draggable: {{ section.settings.scrollbar_draggable }}             // スクロ－ルバーをドラッグ可能にするかどうか(true:有効 false:無効)
      },
      {% endif %}
      {% if section.settings.autoplay_enabled == 'true' %}
      // 自動再生
      autoplay: {
        delay: {{ section.settings.autoplay_delay }},                     // 遷移間の遅延(ミリ秒単位)。このパラメータが指定されていない場合、自動再生は無効。
        disableOnInteraction: false                                       // 自動再生を無効にするかどうか(true:無効 false:有効)falseに設定すると、ユーザー操作（スワイプ）後に自動再生が無効にならず、操作のたびに再起動。
      }
      {% endif %}
    };

    // swiper生成
    const swiper = new Swiper(".swiper_{{ section.id }}", option);
  })();
</script>
