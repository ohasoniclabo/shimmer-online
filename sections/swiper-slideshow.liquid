<link href="{{ 'swiper-bundle.min.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">
<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>

<!-- Slider main container -->
<div id="{{ section.id }}" class="swiper swiper_{{ section.id }} swiper_custom">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper swiper-wrapper_custom">
    <!-- Slides -->
    {% for block in section.blocks %}
      <div class="swiper-slide swiper-slide_custom">
        <div class="{% unless block.settings.no_margins %}swiper-section-spacing{% endunless %}">
          {{ block.settings.liquid_html }}
        </div>
      </div>
    {% endfor %}
  </div>
  {% if section.settings.pagination_enabled == 'true' %}
    <!-- If we need pagination -->
    <div class="swiper-pagination swiper-pagination_custom"></div>
  {% endif %}
  {% if section.settings.navigation_enabled == 'true' %}
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev swiper-button-prev_custom"></div>
    <div class="swiper-button-next swiper-button-next_custom"></div>
  {% endif %}
  {% if section.settings.scrollbar_enabled == 'true' %}
    <!-- If we need scrollbar -->
    <div class="swiper-scrollbar swiper-scrollbar_custom"></div>
  {% endif %}
</div>

