{%- assign blog = blogs[section.settings.news_list] -%}

<div id="section-news-list">
  <div class="container3">
    <div class="productheading">
      <span class="pro">PRODUCTS</span>
    </div>
    <div class="producttext">
      <div class="products">
        Coming Soon…
      </div>
    </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "プロダクト",
  "settings": [
    {
      "id": "maininfo",
      "type": "textarea",
      "label": "メインの文章",
      "default": "テスト"
    },
    {
      "id": "subinfo",
      "type": "textarea",
      "label": "サブの文章",
      "default": "テストテスト"
    }
  ],
  "presets": [
    {
      "name": "プロダクト",
      "category": "プロダクト"
    }
  ]
}
{% endschema %}

{% stylesheet %}

  @media (min-width: 850px) {

    .productheading {
      margin-left:83px;
      padding-right:77px;
      /* border-right: solid 1px black;*/
    }

    .pro {
      font-size:36px;
      padding: 53px 0;
    }

    .container3 {
      display:flex;
      border-bottom: solid 1px black;
      align-items: center;
    }

    .producttext {
      width:903px;
      text-align: center;
    }

    .products {
      font-size:24px;
    }
  }

  @media (max-width: 849px) {

    .productheading {
      margin-left:43px;
      padding-right:77px;
      /* border-right: solid 1px black;*/
    }

    .pro {
      font-size:20px;
      padding: 20px 0;
      font-weight:bold;
    }

    .container3 {
      display:flex;
      border-bottom: solid 1px black;
      flex-direction: column;
    }

    .producttext {
      width:100%;
      margin-left:43px;
      margin-bottom:20px;
      padding: 20px 0;
    }

    .products {
      font-size:18px;
    }

  }

  

  #section-news-list .productheading{
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  #section-news-list .news-list-item>a{
    display: flex;
    margin: 30px 0;
  }
  #section-news-list .news-list-item:last-child{
    border-bottom: none;
  }
 
  #section-news-list .news-list-category{
    font-size: 10px;
    color: #fff;
    background: #000;
    padding: 15px;
    margin-right: 15px;
  }
  #section-news-list .news-list-info{
    padding-right:15px;
    border-bottom: solid 1px black;
  }
 
  @media screen and (max-width: 768px){
    #section-news-list .container{
      padding: 35px 20px;
    }
    #section-news-list .news-list-item>a{
      /* display: block;
      padding: 15px; */
    }

  }

  .news-list-item a:hover {
    text-decoration:none;
    border-bottom:none;
  }
{% endstylesheet %}

