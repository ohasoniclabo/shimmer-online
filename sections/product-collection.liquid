{% comment %}swiper_8.4.7{% endcomment %}
<link href="{{ 'swiper-bundle.min.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">
<script src="{{ 'swiper-bundle.min.js' | asset_url }}"></script>

<!-- section start -->
<div id="{{ section.id }}" class="section_{{ section.id }}">
  <!-- section wrapper start -->
  <div class="section_{{ section.id }}_wrapper">
    {% if section.settings.header_enabled == 'true' %}
      <!-- header start -->
      <div class="header_{{ section.id }}">
        {% if section.settings.header_image_enabled == 'true' %}
          <div class="header_{{ section.id }}_image">
            {% if section.settings.header_image %}
              <img src="{{ section.settings.header_image | image_url: width: section.settings.header_image_width, height: section.settings.header_image_height, crop: 'center' }}">
            {% endif %}
          </div>
        {% endif %}
        {% if section.settings.header_text_enabled == 'true' %}
          <div class="header_{{ section.id }}_text">
            {{ section.settings.header_text }}
          </div>
        {% endif %}
      </div>
      <!-- header end -->
    {% endif %}
    {% if section.settings.main_enabled == 'true' %}
      <!-- main start -->
      <div class="main_{{ section.id }}">
        <!-- Slider main container -->
        <div class="swiper swiper_{{ section.id }}">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <div class="main_item_wrapper">
                  <div class="main_item_image">
                    {% if block.settings.item_product == blank %}
                      {{ 'image' | placeholder_svg_tag: 'main_item_image_none' }}
                    {% else %}
                      <img src="{{ block.settings.item_product | image_url: width: section.settings.main_item_image_width, height: section.settings.main_item_image__height, crop: 'center' }}">
                    {% endif %}
                  </div>
                  <div class="main_item_title">
                    {% if block.settings.item_product == blank %}
                      タイトル
                    {% else %}
                      {{ block.settings.item_product.title }}
                    {% endif %}
                  </div>
                  <div class="main_item_price">
                    {% if block.settings.item_product == blank %}
                      9,999,999（税込）
                    {% else %}
                      {{ block.settings.item_product.price | money }}
                    {% endif %}
                  </div>
                  {% if section.settings.main_item_button_enabled == 'true' and block.settings.item_button == 'true' %}
                    {% for variant in block.settings.item_product.variants %}
                      {% if variant.id != '' %}
                        <div class="main_item_button">
                          <a href="{{ shop.url }}/cart/add?id={{ variant.id }}&quantity=1">
                            <input type="button" value="{{ section.settings.main_item_input_button_text }}">
                          </a>
                        </div>
                        {% break %}
                      {% endif %}
                    {% endfor %}
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
          {% if section.settings.main_swiper_slide_pagination_enabled == 'true' %}
            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
          {% endif %}
          {% if section.settings.main_swiper_slide_navigation_enabled == 'true' %}
            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
          {% endif %}
          {% if section.settings.main_swiper_slide_scrollbar_enabled == 'true' %}
            <!-- If we need scrollbar -->
            <div class="swiper-scrollbar"></div>
          {% endif %}
        </div>
      </div>
      <!-- content end -->
    {% endif %}
    {% if section.settings.footer_enabled == 'true' %}
      <!-- footer start -->
      <div class="footer_{{ section.id }}">
        {% if section.settings.footer_image_enabled == 'true' %}
          <div class="footer_{{ section.id }}_image">
            {% if section.settings.footer_image %}
              <img src="{{ section.settings.footer_image | image_url: width: section.settings.footer_image_width, height: section.settings.footer_image_height, crop: 'center'  }}">
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.footer_text_enabled == 'true' %}
          <div class="footer_{{ section.id }}_text">
            {{ section.settings.footer_text }}
          </div>
        {% endif %}
      </div>
      <!-- footer end -->
    {% endif %}
  </div>
  <!-- section wrapper end -->
</div>
<!-- section end -->

