    .section_{{ section.id }}_wrapper {
      width: {{ section.settings.section_wrapper_width }};
      height: calc(0 + {% if section.settings.header_enabled != '' %}{{ section.settings.header_height }}{% else %}0{% endif %} + {% if section.settings.main_enabled != '' %}{{ section.settings.main_height }}{% else %}0{% endif %} + {% if section.settings.footer_enabled != '' %}{{ section.settings.footer_height }}{% else %}0{% endif %});
