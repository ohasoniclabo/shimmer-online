{% schema %}
  {
    "name": "取扱店舗",
    "class": "section-collection-list",
    "max_blocks": 20,
    "settings": [
      {
        "type": "text",
        "id": "Area",
        "label": "都道府県",
        "default": "東京都"
      }
    ],
    "blocks": [
      {
        "type": "Areashop",
