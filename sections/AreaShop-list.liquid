          "id": "phonenumber",
          "label": "電話番号",
          "default": "000-0000-0000"
        },
        {
          "type": "text",
          "id": "arealink",
          "label": "店舗URL",
          "default": "https://shop.com"
        }
        ]
      }
    ],
    "presets": [
      {
        "name": "取扱店舗",
        "settings": {},
        "blocks": [
            { "type": "Areashop" },
            { "type": "Areashop" },
            { "type": "Areashop" }
        ]
      }
    ]
  }
{% endschema %}
